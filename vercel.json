{
  "version": 2,
  "routes": [{ "src": "/api/(.*)", "dest": "api/app.py" }],
  "buildCommand": "pnpm run build",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "installCommand": "pnpm install",
        "buildCommand": "pnpm run build"
      }
    }
  ],
  "env": {
    "NODE_VERSION": "18.x"
  }
}

